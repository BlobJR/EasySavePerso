<Window x:Class="EasySave.Desktop.Views.HomePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:resx="clr-namespace:EasySave.Desktop.Properties"
        xmlns:local="clr-namespace:EasySave.Desktop.Utils"
        Title="Home" Height="800" Width="1000"
        WindowStartupLocation="CenterScreen" MinWidth="600" MinHeight="400">

    <Window.Resources>
        <local:UILanguageManager x:Key="LangManager"/>

        <!-- Style des boutons -->
        <Style TargetType="Button">
            <Setter Property="FontFamily" Value="{StaticResource OutfitThin}"/>
            <Setter Property="Background" Value="#7FB1AF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="10" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- Grid principale avec deux colonnes -->
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <!-- Zone principale -->
            <ColumnDefinition Width="80"/>
            <!-- Colonne à droite pour les boutons Pause/Resume/Stop -->
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ✅ Barre de titre -->
        <Grid Grid.Row="0" Grid.ColumnSpan="2" HorizontalAlignment="Stretch" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal" Grid.Column="0" HorizontalAlignment="Left">
                <Button Content="JSON" Command="{Binding SetLogFormatCommand}" CommandParameter="JSON" Background="Gray" Width="60" Height="30"/>
                <Button Content="XAML" Command="{Binding SetLogFormatCommand}" CommandParameter="XAML" Background="Gray" Width="60" Height="30"/>
            </StackPanel>

            <TextBlock Text="EasySave" FontFamily="{StaticResource OutfitThin}" FontSize="40" FontWeight="Bold" 
                       VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="1"/>

            <StackPanel Orientation="Horizontal" Grid.Column="2" HorizontalAlignment="Right">
                <Button Content="FR" Click="ChangeLanguageFR" Background="Gray" Width="50" Height="30"/>
                <Button Content="EN" Click="ChangeLanguageEN" Background="Gray" Width="50" Height="30"/>
            </StackPanel>
        </Grid>

        <!-- ✅ Boutons de gestion des Jobs (Colonne de gauche) -->
        <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center">
            <Button Content="{Binding Source={StaticResource LangManager}, Path=AddJobLabel}" Command="{Binding AddJobCommand}"/>
            <Button Content="{Binding Source={StaticResource LangManager}, Path=EditJobLabel}" Command="{Binding EditJobCommand}"/>
            <Button Content="{Binding Source={StaticResource LangManager}, Path=DeleteJobLabel}" Command="{Binding DeleteJobCommand}"/>
            <Button Content="{Binding Source={StaticResource LangManager}, Path=ExecuteJobLabel}" Command="{Binding ExecuteJobCommand}"/>
            <Button Content="{Binding Source={StaticResource LangManager}, Path=ExecuteSelectedJobLabel}" Command="{Binding ExecuteMultipleJobsCommand}"/>
            <Button Content="{Binding Source={StaticResource LangManager}, Path=EncryptionConfigurationLabel}" Command="{Binding ConfigureEncryptionCommand}"/>
            <Button Content="{Binding Source={StaticResource LangManager}, Path=DecryptLabel}" Command="{Binding DecryptFilesCommand}"/>
        </StackPanel>

        <!-- ✅ Bouton "Démarrer le serveur" sous les boutons de gestion des Jobs -->
        <StackPanel Grid.Row="2" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Content="🚀 Démarrer le Serveur" Command="{Binding StartServerCommand}"
                    Width="200" Height="40"  />
        </StackPanel>

        <!-- ✅ Liste des Jobs -->
        <GroupBox Header="{Binding Source={StaticResource LangManager}, Path=JobsListTitle}" Grid.Row="3" Grid.Column="0" Margin="5">
            <Grid>
                <ListView x:Name="JobListView" ItemsSource="{Binding Jobs}" SelectedItem="{Binding SelectedJob}" 
                          SelectionMode="Extended" SelectionChanged="JobListView_SelectionChanged"
                          VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
                          Margin="10" BorderBrush="#F2F7F7" Padding="10">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="{Binding Source={StaticResource LangManager}, Path=JobName}" DisplayMemberBinding="{Binding Name}" Width="200"/>
                            <GridViewColumn Header="{Binding Source={StaticResource LangManager}, Path=JobSource}" DisplayMemberBinding="{Binding SourcePath}" Width="250"/>
                            <GridViewColumn Header="{Binding Source={StaticResource LangManager}, Path=JobDestination}" DisplayMemberBinding="{Binding DestinationPath}" Width="250"/>
                            <GridViewColumn Header="{Binding Source={StaticResource LangManager}, Path=JobType}" DisplayMemberBinding="{Binding SaveType}" Width="220"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </Grid>
        </GroupBox>

        <!-- ✅ GridSplitter -->
        <GridSplitter Grid.Row="4" Grid.Column="0" Height="5" Background="Gray" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>

        <!-- ✅ Zone ConsoleLog -->
        <GroupBox Header="{Binding Source={StaticResource LangManager}, Path=ConsoleLogTitle}" Grid.Row="5" Grid.Column="0" Margin="5">
            <Grid>
                <TextBox Background="DarkGray" FontStyle="Italic" Foreground="White" x:Name="ConsoleLogBox" 
                         Text="{Binding ConsoleLog, Mode=OneWay}"
                         VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
                         VerticalScrollBarVisibility="Auto" TextWrapping="Wrap"
                         IsReadOnly="True"/>
            </Grid>
        </GroupBox>

        <!-- Colonne droite avec les boutons Pause/Resume/Stop -->
        <Grid Grid.Row="3" Grid.Column="1" Grid.RowSpan="3" HorizontalAlignment="Stretch" VerticalAlignment="Center">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <Button Content="pause" Command="{Binding PauseJobCommand}" Width="50" Height="50"/>
                <Button Content="resume" Command="{Binding ResumeJobCommand}" Width="50" Height="50"/>
                <Button Content="stop" Command="{Binding StopJobCommand}" Width="50" Height="50"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
